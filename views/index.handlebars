<h1>Eat-Da-Burger!</h1>

<div class="burger-lists">

    <ul>
        {{#each burgers}}
        <div class="burger-list-item">
            {{burger_name}}
            <button data-id="{{id}}">Eat me!</button>
        </div>
        {{/each}}
    </ul>


    <ul>
        {{#each burgers}}
        {{burger_name}}
        <h1>Hello</h1>
        {{/each}}
    </ul>

</div>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> devoured<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Submit</button>
</form>